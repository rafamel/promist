{
  "presets": [
    ["env", { "targets": { "node": "8.0.0" } }]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": [
          "./src/lib"
        ],
        "alias": {
          "~": "./src"
        }
      }
    ],
    "transform-decorators-legacy",
    "transform-class-properties",
    [
      "transform-object-rest-spread",
      {
        "useBuiltIns": true
      }
    ]
  ],
  "ignore": [
    "node_modules"
  ]
}